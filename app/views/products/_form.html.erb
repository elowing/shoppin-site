<div class="container">
  <div class="col-md-6">
    <%= form_for(product, :html => {:multipart => true, class: "form-horizontal"}) do |f| %>
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <b>Product title</b><br>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <b>Upload image</b><br>
        <%= f.file_field :product_image %>
      </div>

      <%= image_tag(product.product_image.url(:thumb))  %>

      <div class="form-group">
        <%= f.hidden_field :product_image_cache %>
      </div>


      <div class="form-group">
        <b>Product price</b><br>
        <%= f.text_field :price_dollars, class: "form-control"  %>  
      </div>  
      
     <div class="form-group">
        <b>Product Description</b><br>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <b>Product Quantity</b><br>
        <%= f.number_field :quantity, class: "form-control" %>
      </div>

      <div class="actions form-group">
          <%= f.submit class: "btn btn-danger" %>
      </div>
    <% end %>

  </div>
</div>














