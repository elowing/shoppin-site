<%= collection_select(:product_tag, :tag_id, @tags, :id, :name, prompt: true) %>
<%= form_tag products_path, method: :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>

<div class="products">
  <%= render @products %>
</div>