<h2><%= @product.title %></h2>
<h3>$<%= @product.price %></h3>
<h3>Quantity: <%= @product.quantity %></h3>
<h3>Vendor: <%= @seller.name %></h3>
<p><%= @product.description %></p>
<p><%= link_to "Edit", edit_product_path if @user && @user == @seller %></p>
<% if current_user %>
  <%= form_for LineItem.new do |f|  %>
    <%= f.hidden_field(:item_id, value: @product.id) %>
    <%= f.hidden_field(:order_id, value: @order.id) %>
    <%= f.number_field(:quantity, value: 1, :min => 1, :max => @product.quantity) %>
    <%= f.submit 'Buy' %>
  <% end %>
<% else %>
  <%= button_to "Log in to purchase", "/auth/amazon" %>
<% end %>