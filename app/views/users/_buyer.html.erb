<h2>Order History</h2>
  <!--  -->
<% @user.orders.select {|o| o.closed}.each_with_index do |order, index| %>
  <% total = 0 %>
  <h4>Order #<%= index+1 %></h4>
  <table class="pretty">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  <% order.line_items.each do |line_item| %>
    <% product = line_item.item %>
    <% total += product.price %>
    <tr>
      <td><%= link_to product.title, product %></td>
      <td><%= product.description %></td>
      <td><%= product.quantity %></td>
      <td><%= product.price %></td>
    </tr>
  <% end %>
  </table>
  <h4>Total: $<%= total %></h4><br/>
<% end %>