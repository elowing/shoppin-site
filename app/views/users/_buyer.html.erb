<hr />
 <div class="container">
    <div class="row">
       <div class="col-md-10">

      <h3>Order History</h3><br>
        <!-- Your details -->

      <% @user.closed_orders.each do |order| %>

        <h4>Order Placed: <%= order.updated_at.strftime('%b %d, %Y') %></h4>

        <table class="table table-striped tcart">
          <thead>
            <tr>
              <th>Date</th>
              <th>Image</th>
              <th>Name</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Total</th>
              <th>Status</th>
            </tr>
          </thead>
       <tbody>
        <% order.line_items.each do |li| %>
         <tr>
           <td><%= li.updated_at.strftime('%b %d, %Y') %></td>
           <td><%= image_tag li.item.product_image_url(:small_thumb).to_s %></td>
           <td><%= link_to li.item.title, li.item %></td>
           <!-- <td>$<%# li.item.price_dollars %></td> -->
           <td><%= li.item.price_pretty %></td>
           <td><%= li.quantity %></td>
           <td><%= li.pretty_total %></td>
           <td><%= li.status %></td>
         </tr>
         <% end %>
         <tr>
            <td colspan="5"><strong>Total</strong></td>
            <td><strong><%= order.pretty_total %></strong></td>
            <td></td>
         </tr>                                              
       </tbody>
        </table><br>

        <% end %>
      </div>
    </div>
  </div>



