<hr />
<div class="col-md-9">
  <h3>Your Products:</h3><br>
    <!-- Your details -->
    <table class="table table-striped tcart">
      <thead>
        <tr>
          <th>Name</th>
          <th>Image</th>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
      </thead>
   
   <tbody>
    <% @user.products.each do |product| %>
     <tr id="product_<%= product.id %>">
       <td><%= link_to product.title, product %></td>
       <td><%= image_tag product.product_image_url(:small_thumb).to_s %><br></td>
       <td><%= product.price_pretty %></td>
       <td class="product_quantity"><%= product.quantity %></td>
       <td><%= link_to 'Edit', edit_product_path(product) %></td>
       <td>
        <%= button_to "Remove", product, :remote => true, :method => :delete %>
       </td>
     </tr>                                      
    <% end %>
   </tbody>
  </table><br>

   <h4><%= link_to 'Add New Product', new_product_path %></h4>
</div>




