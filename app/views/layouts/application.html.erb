<!DOCTYPE html>
<html>
<head>
  <title>ThePup.Club</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body>
  <%= render 'layouts/nav' %>
    <% if flash[:notice] %>
      <div class= 'notice'>
        <h3><%= flash[:notice] %></h3>
      </div>
    <% end %>
  

    <%= yield %>

    <%= render 'layouts/footer' %>

</body>
</html>