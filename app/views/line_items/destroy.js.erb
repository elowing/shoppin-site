$('#line_item_<%=j "#{@line_item.id}" %>').remove();
$('tr:last th:last').text('<%=j "#{@order.pretty_total}" %>');
$('.hidden').text('<%= "#{@order.line_items.collect{|item| item.quantity}.reduce(:+)}" %>');
(function() {
  var cartCount = $('.hidden').text(),
      cartTotal = $('tr:last th:last').text();
  $('.fa-shopping-cart').parent().html("<i class='fa fa-shopping-cart'></i>" + cartCount + " - " + cartTotal);
})();